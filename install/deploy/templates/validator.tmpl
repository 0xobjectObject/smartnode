services:
  {{.ValidatorClientContainerName}}:
    image: {{.GetVcContainerTag}}
    user: root
    container_name: {{.ProjectName}}_{{.ValidatorClientContainerName}}
    restart: unless-stopped
    stop_grace_period: 3m
    volumes:
      - /opt/rocketpool/scripts:/opt/rocketpool/scripts:ro
      - {{.GetValidatorsFolderPath}}:{{.GetValidatorsFolderPath}}
      - {{.GetAddonsFolderPath}}:{{.GetAddonsFolderPath}}
    networks:
      - net
    environment:
      - NETWORK={{.Network}}
      - CLIENT={{.GetSelectedBeaconNode}}
      - BN_API_ENDPOINT={{.BnHttpUrl}}
      - BN_RPC_ENDPOINT={{.BnRpcUrl}}
      - FALLBACK_BN_API_ENDPOINT={{.FallbackBnHttpUrl}}
      - FALLBACK_BN_RPC_ENDPOINT={{.FallbackBnRpcUrl}}
      - GRAFFITI={{.Graffiti}}
      - ENABLE_METRICS={{.Metrics.EnableMetrics}}
      - VC_METRICS_PORT={{.ValidatorClient.VcCommon.MetricsPort}}
      - DOPPELGANGER_DETECTION={{.ValidatorClient.VcCommon.DoppelgangerDetection}}
      - VC_ADDITIONAL_FLAGS={{.GetVcAdditionalFlags}}
      - FEE_RECIPIENT_FILE={{.FeeRecipientFile}}
      - ENABLE_BITFLY_NODE_METRICS={{.Metrics.EnableBitflyNodeMetrics}}
      - BITFLY_NODE_METRICS_SECRET={{.Metrics.BitflyNodeMetrics.Secret}}
      - BITFLY_NODE_METRICS_ENDPOINT={{.Metrics.BitflyNodeMetrics.Endpoint}}
      - BITFLY_NODE_METRICS_MACHINE_NAME={{.Metrics.BitflyNodeMetrics.MachineName}}
      - ADDON_GWW_ENABLED={{.Addons.GraffitiWallWriter.Enabled}}
      - MEV_BOOST_URL={{.MevBoostUrl}}
      - ENABLE_MEV_BOOST={{.MevBoost.Enable}}
      - VALIDATORS_DIR={{.GetValidatorsFolderPath}}
      - GWW_GRAFFITI_FILE={{.GetGwwGraffitiFilePath}}
      {{- /* Client-specific values */}}
      {{- if eq .LocalBeaconClient.BeaconNode.String "teku"}}
      - TEKU_SHUT_DOWN_WHEN_SLASHED={{.ValidatorClient.Teku.UseSlashingProtection}}
      {{- end}}
    entrypoint: sh
    command: "/opt/rocketpool/scripts/{{.GetVcStartScript}}"
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
networks:
  net:
