services:
  {{.ExecutionClientContainerName}}:
    image: {{.GetEcContainerTag}}
    user: root
    container_name: {{.ProjectName}}_{{.ExecutionClientContainerName}}
    restart: unless-stopped
    stop_grace_period: 15m
    {{- $p2p := (or .LocalExecutionClient.P2pPort.String "30303")}}
    ports: [ "{{$p2p}}:{{$p2p}}/udp", "{{$p2p}}:{{$p2p}}/tcp"{{.GetEcOpenApiPorts}} ]
    volumes:
      - {{.ExecutionClientDataVolume}}:/ethclient
      - /usr/share/rocketpool/scripts:/usr/share/rocketpool/scripts:ro
      - /var/lib/rocketpool/data/{{.ProjectName}}:/secrets
    networks:
      - net
    environment:
      - NETWORK={{.Network}}
      - CLIENT={{.LocalExecutionClient.ExecutionClient}}
      - EC_MAX_PEERS={{.GetEcMaxPeers}}
      - EC_P2P_PORT={{$p2p}}
      - EC_ADDITIONAL_FLAGS={{.GetEcAdditionalFlags}}
      - EC_HTTP_PORT={{.LocalExecutionClient.HttpPort}}
      - EC_WS_PORT={{.LocalExecutionClient.WebsocketPort}}
      - EC_ENGINE_PORT={{.LocalExecutionClient.EnginePort}}
      - EXTERNAL_IP={{.GetExternalIP}}
      - ENABLE_METRICS={{.Metrics.EnableMetrics}}
      - EC_METRICS_PORT={{.Metrics.EcMetricsPort}}
      {{- /* Client-specific values */}}
      {{- if eq .LocalExecutionClient.ExecutionClient.String "besu"}}
      - BESU_MAX_BACK_LAYERS={{.LocalExecutionClient.Besu.MaxBackLayers}}
      - BESU_JVM_HEAP_SIZE={{.LocalExecutionClient.Besu.JvmHeapSize}}
      - BESU_ARCHIVE_MODE={{.LocalExecutionClient.Besu.ArchiveMode}}
      {{- else if eq .LocalExecutionClient.ExecutionClient.String "nethermind"}}
      - EC_CACHE_SIZE={{.LocalExecutionClient.Nethermind.CacheSize}}
      - RP_NETHERMIND_PRUNE_MEM_SIZE={{.LocalExecutionClient.Nethermind.PruneMemSize}}
      - RP_NETHERMIND_ADDITIONAL_MODULES={{.LocalExecutionClient.Nethermind.AdditionalModules}}
      - RP_NETHERMIND_ADDITIONAL_URLS={{.LocalExecutionClient.Nethermind.AdditionalUrls}}
      - RP_NETHERMIND_FULL_PRUNE_MEMORY_BUDGET={{.LocalExecutionClient.Nethermind.FullPruneMemoryBudget}}
      - RP_NETHERMIND_FULL_PRUNING_THRESHOLD_MB={{.LocalExecutionClient.Nethermind.FullPruningThresholdMb}}
      {{- else if eq .LocalExecutionClient.ExecutionClient.String "geth"}}
      - RP_GETH_ENABLE_PBSS={{.LocalExecutionClient.Geth.EnablePbss}}
      {{- end}}
    entrypoint: sh
    command: "/usr/share/rocketpool/scripts/{{.GetEcStartScript}}"
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
networks:
  net:
volumes:
  {{.ExecutionClientDataVolume}}:
